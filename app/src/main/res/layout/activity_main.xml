<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#f4c2c2"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context=".RelativeLayoutAndroidExample"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/android" />

        <TextView
            android:id="@+id/enter"
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:layout_below="@id/image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:text="UserName : "
            android:textColor="#01579B"
            android:textSize="15.5sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="150dp" />
        <TextView
            android:id="@+id/enter1"
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:layout_below="@id/enter"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:text="FirstName : "
            android:textColor="#01579B"
            android:textSize="15.5sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="150dp" />
        <TextView
            android:id="@+id/enter2"
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:layout_below="@id/enter1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:text="LastName : "
            android:textColor="#01579B"
            android:textSize="15.5sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="150dp" />
        <TextView
            android:id="@+id/enter3"
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:layout_below="@id/enter2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:text="Public Ip : "
            android:textColor="#01579B"
            android:textSize="15.5sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="150dp" />
        <EditText
            android:id="@+id/adress"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="105dp"
            android:ems="10"
            android:hint="Enter your web adress"
            android:textColor="#01579B"
            android:textSize="17dp"
            android:layout_marginRight="0dp"
            />
        <EditText
            android:id="@+id/adress1"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_below="@id/adress"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="Enter your web adress"
            android:textColor="#01579B"
            android:textSize="17dp"
            android:layout_marginRight="0dp"
            />
        <EditText
            android:id="@+id/adress2"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_below="@id/adress1"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Enter your web adress"
            android:textColor="#01579B"
            android:textSize="17dp"
            android:layout_marginRight="0dp"
            />
        <EditText
            android:id="@+id/adress3"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_below="@id/adress2"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="Enter your web adress"
            android:textColor="#01579B"
            android:textSize="17dp"
            android:layout_marginRight="0dp"
            />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adress3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="40dp"
            android:elevation="15dp"
            android:focusable="true"
            android:text="SHOW"
            android:textColor="#01579B"
            android:backgroundTint="#E57373" />




    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>